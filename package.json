{
  "name": "@future-widget-lab/ui-filters",
  "version": "0.1.0",
  "description": "A set of primitives to perform filtering through search parameters in React-based UIs.",
  "license": "MIT",
  "author": "Carlos Lobo",
  "main": "dist/index.js",
  "module": "dist/ui-filters.esm.js",
  "typings": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/future-widget-lab/ui-filters.git"
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "analyze": "size-limit --why",
    "build": "dts build",
    "lint": "dts lint",
    "prepare": "dts build",
    "size": "size-limit",
    "start": "dts watch",
    "test": "dts test --passWithNoTests"
  },
  "husky": {
    "hooks": {
      "pre-commit": "dts lint"
    }
  },
  "prettier": {
    "singleAttributePerLine": true,
    "bracketSpacing": true,
    "useTabs": true,
    "singleQuote": true,
    "semi": true,
    "printWidth": 120,
    "tabWidth": 2,
    "importOrderSeparation": false,
    "importOrderSortSpecifiers": true,
    "importOrderCaseInsensitive": true,
    "pluginSearchDirs": false,
    "trailingComma": "none"
  },
  "jest": {
    "testEnvironment": "jsdom"
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "engines": {
    "node": ">=12"
  },
  "size-limit": [
    {
      "path": "dist/ui-filters.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/ui-filters.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^11.2.0",
    "@tsconfig/recommended": "^1.0.8",
    "@tsconfig/vite-react": "^3.4.0",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "dts-cli": "^2.0.5",
    "husky": "^9.1.7",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "size-limit": "^11.2.0",
    "tslib": "^2.8.1",
    "typescript": "^5.8.2"
  },
  "keywords": [
    "react",
    "filter",
    "filters",
    "filtering",
    "react-hooks",
    "search-params",
    "query-params",
    "url-filters",
    "url-parameters",
    "query-filters",
    "filter-logic",
    "custom-filters"
  ]
}